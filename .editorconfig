# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
# https://github.com/timothycrosley/isort/wiki/isort-Settings
# https://timothycrosley.github.io/isort/docs/configuration/profiles/#black
default_section=THIRDPARTY
ensure_newline_before_comments=True
force_grid_wrap=0
import_heading_firstparty=Todify Stuff
import_heading_stdlib=Standard Library
import_heading_thirdparty=Third Party Stuff
include_trailing_comma=True
known_first_party=todify
line_length=88
multi_line_output=3
skip_glob=*/migrations/**,*/venv/**,*/docs/**
use_parentheses=True

[*.md]
trim_trailing_whitespace = false

